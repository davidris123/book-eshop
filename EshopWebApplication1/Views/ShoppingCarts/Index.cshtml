@using Microsoft.Extensions.Options
@model Eshop.DomainEntities.ShoppingCartDto
@inject IOptions<StripeSettings> Stripe

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">Your shopping cart</h1>

@if (Model.TotalPrice != 0)
{
    <div class="mb-3">
        <form asp-controller="ShoppingCarts" asp-action="PayOrder" method="post">
            <article>
                <script src="https://checkout.stripe.com/checkout.js"
                        class="stripe-button"
                        data-key="@Stripe.Value.PublishableKey"
                        data-locale="auto"
                        data-description="Book Store Web Application Payment"
                        data-amount="@(Model.TotalPrice * 100)"
                        data-label="Confirm payment">
                </script>
            </article>
        </form>
        <th><b>Total: $@Model.TotalPrice</b></th>
    </div>
    <div>
        <button class="btn btn-primary rounded-pill"><a style="text-decoration: none;" class="text-white" href="/Books/Index">Back to books</a></button>
    </div>

}
<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Book name
            </th>
            <th>
                Price
            </th>
            <th>
                Author
            </th>
            <th>
                Published date
            </th>
            <th>
                Quantity
            </th>
            <th></th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.BooksInShoppingCarts.Count(); i++)
        {
            var item = Model.BooksInShoppingCarts[i];
            <tr>
                <td>@(i + 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Name)
                </td>

                <td>
                    $@Html.DisplayFor(modelItem => item.Book.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Author)
                </td>
                <td>
                    @{
                        var date = item.Book.Published.Value.ToShortDateString();
                    }
                    @Html.DisplayFor(modelItem => date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    |
                    <a asp-action="Delete" asp-controller="ShoppingCarts" asp-route-id="@item.Book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
