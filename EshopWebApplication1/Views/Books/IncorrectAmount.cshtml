<body>
    <script type="text/javascript">
        var count = 5; // Timer
        var redirect = "/Books/Index"; // Target URL

        function countDown() {
            var timer = document.getElementById("timer"); // Timer ID
            if (count > 0) {
                count--;
                timer.innerHTML = "This page will redirect in " + count + " seconds."; // Timer Message
                setTimeout("countDown()", 1000);
            } else {
                window.location.href = redirect;
            }
        }
    </script>
    <h1>
        The amount you have selected exceeds the stock available.
        <br />
        <a style="text-decoration: none;" href="/Books/Index">Click here</a> to return
    </h1>
    <br />
    <h4 id="timer">
        <script type="text/javascript">
            countDown();
        </script>
    </h4>
</body>